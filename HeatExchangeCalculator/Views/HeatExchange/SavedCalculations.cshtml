@* Views/HeatExchange/SavedCalculations.cshtml *@
@model List<HeatExchangeCalculator.Models.SavedCalculation>

@{
    ViewData["Title"] = "Сохраненные расчеты";
}

<div class="container mt-4">
    <h1 class="mb-4">
        <i class="bi bi-archive"></i> Сохраненные расчеты
    </h1>

    <div class="row mb-4">
        <div class="col">
            <div class="d-flex justify-content-between">
                <a href="@Url.Action("Calculate")" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Новый расчет
                </a>
                @if (Model.Count > 0)
                {
                    <form method="post" action="@Url.Action("ClearAll", "HeatExchange")"
                          onsubmit="return confirm('Удалить все сохраненные расчеты?')">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash"></i> Очистить все
                        </button>
                    </form>
                }
            </div>
        </div>
    </div>

    @if (Model.Count == 0)
    {
        <div class="card shadow-sm">
            <div class="card-body text-center py-5">
                <i class="bi bi-inbox display-1 text-muted mb-3"></i>
                <h3 class="text-muted">Нет сохраненных расчетов</h3>
                <p class="text-muted">Сохраните расчеты, чтобы они появились здесь</p>
                <a href="@Url.Action("Calculate")" class="btn btn-primary mt-3">
                    <i class="bi bi-calculator"></i> Создать расчет
                </a>
            </div>
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var calc in Model)
            {
                <div class="col">
                    <div class="card shadow-sm h-100">
                        <div class="card-header bg-secondary text-white">
                            <h5 class="card-title mb-0">
                                <i class="bi bi-file-earmark-text"></i> @calc.Name
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="row g-2 mb-3">
                                <div class="col-6">
                                    <small class="text-muted">Высота</small>
                                    <div class="fw-bold">@calc.Data.Height м</div>
                                </div>
                                <div class="col-6">
                                    <small class="text-muted">Диаметр</small>
                                    <div class="fw-bold">@calc.Data.ApparatusDiameter м</div>
                                </div>
                                <div class="col-6">
                                    <small class="text-muted">Материал</small>
                                    <div class="fw-bold text-primary">@calc.Data.InitialMaterialTemp °C</div>
                                </div>
                                <div class="col-6">
                                    <small class="text-muted">Газ</small>
                                    <div class="fw-bold text-warning">@calc.Data.InitialGasTemp °C</div>
                                </div>
                            </div>

                            <div class="mb-3">
                                <small class="text-muted">Сохранен</small>
                                <div class="text-muted">
                                    <i class="bi bi-clock"></i> @calc.Date.ToString("dd.MM.yyyy HH:mm")
                                </div>
                            </div>

                            <div class="d-grid gap-2">
                                <a href="@Url.Action("LoadCalculation", new { id = calc.Id })"
                                   class="btn btn-outline-primary btn-sm">
                                    <i class="bi bi-arrow-up-right-square"></i> Открыть
                                </a>
                                <div class="btn-group">
                                    <a href="@Url.Action("ExportToExcel", new { id = calc.Id })"
                                       class="btn btn-outline-success btn-sm">
                                        <i class="bi bi-file-earmark-excel"></i> Excel
                                    </a>
                                    <button type="button" class="btn btn-outline-danger btn-sm"
                                            onclick="deleteCalculation(@calc.Id)">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@section Scripts {
    <script>
        function deleteCalculation(id) {
            if (confirm('Удалить этот расчет?')) {
                window.location.href = '@Url.Action("DeleteCalculation")' + '?id=' + id;
            }
        }
    </script>
}
