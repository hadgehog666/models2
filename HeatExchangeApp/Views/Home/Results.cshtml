@model HeatExchangeApp.Models.CalculationResult

@{
    ViewData["Title"] = "Результаты расчета";
}

<div class="container">
    <h1>@ViewData["Title"]</h1>

    @if (ViewBag.IsLoaded == true)
    {
        <div class="alert alert-info">
            Загружен сохраненный расчет
        </div>
    }

    <!-- Параметры расчета -->
    <div class="card mb-4">
        <div class="card-header">Параметры расчета</div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-4">
                    <p><strong>Высота слоя:</strong> @Model.Parameters.Height м</p>
                    <p><strong>Температура материала:</strong> @Model.Parameters.InitialMaterialTemp °C</p>
                    <p><strong>Температура газа:</strong> @Model.Parameters.InitialGasTemp °C</p>
                </div>
                <div class="col-md-4">
                    <p><strong>Скорость газа:</strong> @Model.Parameters.GasVelocity м/с</p>
                    <p><strong>Теплоемкость газа:</strong> @Model.Parameters.GasHeatCapacity кДж/(м³·К)</p>
                    <p><strong>Коэффициент теплоотдачи:</strong> @Model.Parameters.HeatTransferCoefficient Вт/(м³·К)</p>
                </div>
                <div class="col-md-4">
                    <p><strong>Отношение теплоемкостей (m):</strong> @Math.Round(Model.HeatCapacityRatio, 3)</p>
                    <p><strong>Относительная высота (Y0):</strong> @Math.Round(Model.FullRelativeHeight, 2)</p>
                    <p><strong>Знаменатель:</strong> @Math.Round(Model.Denominator, 3)</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Таблица результатов -->
    <div class="card mb-4">
        <div class="card-header">Результаты расчета по высоте слоя</div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>Высота y, м</th>
                            <th>Относит. высота Y</th>
                            <th>φ</th>
                            <th>θ</th>
                            <th>Темп. материала t, °C</th>
                            <th>Темп. газа T, °C</th>
                            <th>Разность Δt, °C</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var point in Model.Points)
                        {
                            <tr>
                                <td>@point.Y.ToString("F2")</td>
                                <td>@point.RelativeHeight.ToString("F2")</td>
                                <td>@point.Phi.ToString("F3")</td>
                                <td>@point.Theta.ToString("F3")</td>
                                <td>@point.MaterialTemp.ToString("F1")</td>
                                <td>@point.GasTemp.ToString("F1")</td>
                                <td>@point.TempDifference.ToString("F1")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Графики -->
    <div class="row">
        <div class="col-md-8">
            <div class="card mb-4">
                <div class="card-header">Температуры материала и газа по высоте</div>
                <div class="card-body">
                    <canvas id="temperatureChart" height="300"></canvas>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-header">Разность температур</div>
                <div class="card-body">
                    <canvas id="differenceChart" height="300"></canvas>
                </div>
            </div>
        </div>
    </div>

    <!-- Кнопки действий -->
    <div class="mb-4">
        <button id="saveCalculationBtn" class="btn btn-success">Сохранить расчет</button>
        <a href="@Url.Action("Index")" class="btn btn-primary">Новый расчет</a>
        <a href="@Url.Action("SavedCalculations")" class="btn btn-secondary">Сохраненные расчеты</a>
        <button onclick="window.print()" class="btn btn-info">Печать</button>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Данные для графиков
        const heights = @Json.Serialize(Model.Points.Select(p => p.Y).ToArray());
        const materialTemps = @Json.Serialize(Model.Points.Select(p => p.MaterialTemp).ToArray());
        const gasTemps = @Json.Serialize(Model.Points.Select(p => p.GasTemp).ToArray());
        const tempDifferences = @Json.Serialize(Model.Points.Select(p => p.TempDifference).ToArray());

        // График температур
        const tempCtx = document.getElementById('temperatureChart').getContext('2d');
        new Chart(tempCtx, {
            type: 'line',
            data: {
                labels: heights,
                datasets: [
                    {
                        label: 'Температура материала, °C',
                        data: materialTemps,
                        borderColor: 'rgb(255, 99, 132)',
                        backgroundColor: 'rgba(255, 99, 132, 0.2)',
                        tension: 0.3
                    },
                    {
                        label: 'Температура газа, °C',
                        data: gasTemps,
                        borderColor: 'rgb(54, 162, 235)',
                        backgroundColor: 'rgba(54, 162, 235, 0.2)',
                        tension: 0.3
                    }
                ]
            },
            options: {
                responsive: true,
                scales: {
                    y: {
                        beginAtZero: false,
                        title: {
                            display: true,
                            text: 'Температура, °C'
                        }
                    },
                    x: {
                        title: {
                            display: true,
                            text: 'Высота слоя, м'
                        }
                    }
                }
            }
        });

        // График разности температур
        const diffCtx = document.getElementById('differenceChart').getContext('2d');
        new Chart(diffCtx, {
            type: 'bar',
            data: {
                labels: heights,
                datasets: [{
                    label: 'Разность температур, °C',
                    data: tempDifferences,
                    backgroundColor: 'rgba(75, 192, 192, 0.6)',
                    borderColor: 'rgba(75, 192, 192, 1)',
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                scales: {
                    y: {
                        beginAtZero: true,
                        title: {
                            display: true,
                            text: 'Разность, °C'
                        }
                    },
                    x: {
                        title: {
                            display: true,
                            text: 'Высота слоя, м'
                        }
                    }
                }
            }
        });

        // Сохранение расчета
        document.getElementById('saveCalculationBtn').addEventListener('click', function() {
            const name = prompt('Введите название для сохранения расчета:');
            if (name) {
                const data = {
                    name: name,
                    parameters: @Json.Serialize(Model.Parameters),
                    results: @Json.Serialize(Model)
                };

                fetch('@Url.Action("SaveCalculation", "HeatExchange")', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify(data)
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        alert('Расчет успешно сохранен!');
                    } else {
                        alert('Ошибка при сохранении');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('Ошибка при сохранении');
                });
            }
        });
    </script>
}