@model List<HeatExchangeApp.Models.SavedCalculation>

@{
    ViewData["Title"] = "Сохраненные расчеты";
}

<div class="container">
    <h1>@ViewData["Title"]</h1>

    @if (!Model.Any())
    {
        <div class="alert alert-info">Нет сохраненных расчетов</div>
    }
    else
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Название</th>
                    <th>Дата создания</th>
                    <th>Действия</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var calc in Model)
                {
                    <tr>
                        <td>@calc.Name</td>
                        <td>@calc.CreatedDate.ToString("dd.MM.yyyy HH:mm")</td>
                        <td>
                            <a href="@Url.Action("LoadCalculation", "HeatExchange", new { id = calc.Id })" class="btn btn-sm btn-primary">Загрузить</a>
                            <form asp-action="DeleteCalculation" method="post" style="display:inline">
                                <input type="hidden" name="id" value="@calc.Id" />
                                <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Удалить расчет?')">Удалить</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }

    <a href="@Url.Action("Index")" class="btn btn-secondary">Назад к расчету</a>
</div>
