@model HeatExchangeApp.Models.HeatExchangeModel

@{
    ViewData["Title"] = "Расчет теплообмена в противоточном слое";
}

<div class="container">
    <h1>@ViewData["Title"]</h1>

    <form asp-action="Calculate" method="post" class="mt-4">
        <div class="row">
            <div class="col-md-6">
                <div class="card mb-3">
                    <div class="card-header">Основные параметры</div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label asp-for="Height" class="form-label"></label>
                            <input asp-for="Height" class="form-control" step="0.1" />
                            <span asp-validation-for="Height" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="InitialMaterialTemp" class="form-label"></label>
                            <input asp-for="InitialMaterialTemp" class="form-control" step="0.1" />
                            <span asp-validation-for="InitialMaterialTemp" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="InitialGasTemp" class="form-label"></label>
                            <input asp-for="InitialGasTemp" class="form-control" step="0.1" />
                            <span asp-validation-for="InitialGasTemp" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="card mb-3">
                    <div class="card-header">Параметры газа и материала</div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label asp-for="GasVelocity" class="form-label"></label>
                            <input asp-for="GasVelocity" class="form-control" step="0.01" />
                            <span asp-validation-for="GasVelocity" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="GasHeatCapacity" class="form-label"></label>
                            <input asp-for="GasHeatCapacity" class="form-control" step="0.01" />
                            <span asp-validation-for="GasHeatCapacity" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="MaterialFlow" class="form-label"></label>
                            <input asp-for="MaterialFlow" class="form-control" step="0.01" />
                            <span asp-validation-for="MaterialFlow" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="MaterialHeatCapacity" class="form-label"></label>
                            <input asp-for="MaterialHeatCapacity" class="form-control" step="0.01" />
                            <span asp-validation-for="MaterialHeatCapacity" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="HeatTransferCoefficient" class="form-label"></label>
                            <input asp-for="HeatTransferCoefficient" class="form-control" step="10" />
                            <span asp-validation-for="HeatTransferCoefficient" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ApparatusDiameter" class="form-label"></label>
                            <input asp-for="ApparatusDiameter" class="form-control" step="0.1" />
                            <span asp-validation-for="ApparatusDiameter" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="mb-3">
            <label asp-for="CalculationName" class="form-label">Название расчета (для сохранения)</label>
            <input asp-for="CalculationName" class="form-control" />
        </div>

        <button type="submit" class="btn btn-primary">Рассчитать</button>
        <a asp-action="SavedCalculations" class="btn btn-secondary">Сохраненные расчеты</a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
