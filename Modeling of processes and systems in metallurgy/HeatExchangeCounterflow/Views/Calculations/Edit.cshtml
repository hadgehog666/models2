@model HeatExchangeCounterflow.Models.Calculation
@{
    Layout = "_Layout";
}

<h2>Редактирование расчёта</h2>

<form asp-action="Edit" method="post">

    <!-- ВАЖНО: ID расчёта -->
    <input type="hidden" asp-for="Id" />

    <div class="form-grid">

        <div>
            <label>Название расчёта</label>
            <input asp-for="Name" />
        </div>

        <div>
            <label>Высота слоя (м)</label>
            <input asp-for="Input.LayerHeightRaw" />
        </div>

        <div>
            <label>Начальная температура материала, °C</label>
            <input asp-for="Input.InitialMaterialTemp" />
        </div>

        <div>
            <label>Начальная температура газа, °C</label>
            <input asp-for="Input.InitialGasTemp" />
        </div>

        <div>
            <label>Скорость газа, м/с</label>
            <input asp-for="Input.GasVelocity" />
        </div>

        <div>
            <label>Теплоёмкость газа</label>
            <input asp-for="Input.GasHeatCapacity" />
        </div>

        <div>
            <label>Расход материала, кг/с</label>
            <input asp-for="Input.MaterialFlow" />
        </div>

        <div>
            <label>Теплоёмкость материала</label>
            <input asp-for="Input.MaterialHeatCapacity" />
        </div>

        <div>
            <label>αV</label>
            <input asp-for="Input.AlphaV" />
        </div>

        <div>
            <label>Диаметр аппарата, м</label>
            <input asp-for="Input.ApparatusDiameter" />
        </div>

    </div>

    <br />

    <button type="submit" class="btn">Пересчитать и сохранить</button>
    <a class="btn btn-secondary" href="/Calculations">Отмена</a>
</form>
